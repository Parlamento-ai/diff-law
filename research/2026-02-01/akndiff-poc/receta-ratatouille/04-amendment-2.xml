          <FRBRauthor href="/poc/persona/deputee-nicoise"/>
          <FRBRcountry value="fr"/>
        </FRBRWork>
        <FRBRExpression>
          <FRBRthis value="/poc/amendment/rat-2025-01-ind2/fra@2025-04-20"/>
