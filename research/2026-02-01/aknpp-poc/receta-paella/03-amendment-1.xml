      base="/poc/receta/paella-valenciana/esp@2024-05-10"
      result="/poc/receta/paella-valenciana/esp@2024-05-10">

      <aknpp:vote date="2024-06-01"
                  result="rejected"
                  source="/poc/debate/pae-2024-01-comision-1">
        <aknpp:for/>
