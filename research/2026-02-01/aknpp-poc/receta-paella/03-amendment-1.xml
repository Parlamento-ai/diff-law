          <aknpp:voter href="/poc/persona/diputada-consumo" showAs="Dip. Consumo"/>
          <aknpp:voter href="/poc/persona/diputado-turismo" showAs="Dip. Turismo"/>
        </aknpp:against>
        <aknpp:abstain/>
      </aknpp:vote>

      <!-- Propuesta rechazada: insertar artículo sobre chorizo -->
      <aknpp:articleChange article="art_5ter" type="insert" after="art_5bis">
